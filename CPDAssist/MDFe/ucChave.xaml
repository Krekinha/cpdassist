<UserControl x:Class="CPDAssist.MDFe.ucChave"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CPDAssist.MDFe"
             mc:Ignorable="d" Height="27.274" Width="423.862">
    <Grid Margin="0">
        <TextBox x:Name="txtChave" HorizontalAlignment="Left" Height="20" Margin="5,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="389" FontSize="12" FontWeight="Bold" IsReadOnly="True" Text="{Binding Chave}"/>
        <Button x:Name="cmdChaveToClipboard" Content="" HorizontalAlignment="Left" Margin="396,3,0,0" VerticalAlignment="Top" Width="30" RenderTransformOrigin="2.44,3.778" Height="20" Template="{DynamicResource ButtonControlTemplate1}" BorderThickness="0" Click="cmdChaveToClipboard_Click"/>
    </Grid>
</UserControl>
